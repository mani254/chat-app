{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}